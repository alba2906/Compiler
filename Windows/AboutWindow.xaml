<Window x:Class="Laba1.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba1.Windows"
        mc:Ignorable="d"
        Title="О программе" 
        Width="400" 
        Height="240" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Images/exclamation.png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Иконка и название программы -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Image Source="/Images/exclamation.png" Width="48" Height="48" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="Компилятор" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Версия 1.0" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <!-- Разделитель -->
        <Rectangle Grid.Row="1" Height="1" Fill="Silver" Margin="0,0,0,15"/>

        <!-- Информация о программе -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10">
                Редактор кода poo и txt форматов
            </TextBlock>

            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,5">
                <Run FontWeight="Bold">Разработчик:</Run> Головина А. С.
            </TextBlock>

			<TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,5">
                <Run FontWeight="Bold">Год создания:</Run> 2026
			</TextBlock>
		</StackPanel>

        <!-- Копирайт -->
        <TextBlock Grid.Row="3" 
                   Text="© 2026 Головина А. С."
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Foreground="Gray"
                   FontSize="11"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,10"/>

    </Grid>
</Window>